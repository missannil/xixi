/* components/h-cart/h-cart.wxss */
.i-cart {
    left: 12rpx;
    top: 16rpx;
}
.cart{
    width:88rpx;
    height:88rpx;
    margin:6rpx auto;
}
.dot {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    left: 60rpx;
    background-color: red;
    border-radius: 50%;
    line-height: 40rpx;
}

.freight {
    margin-left: 10rpx;
}

.pay {
    background: #18b357;
    color: white;
    line-height: 100rpx;


}

.showList {
    position: absolute;
    background-color: white;
    left: 0;
    bottom: 100rpx;
    width: 750rpx;
    max-height: 662rpx;
    overflow: auto;

}

.showList .title {
    background: #18b357;
    color: #eee;
    padding: 10rpx 20rpx;

}


.goodsList {
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    border-bottom: 2rpx solid #eee;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    color: red;

}

.name {
    font-size: 36rpx;
    color: #000;
    width: 200rpx;
    text-align: center;

}


.goodsList_left {
    width: 370rpx
}

.goodsList_right {
    width: 340rpx;
    display: flex;
}

.addCart,
.reduceCart {
    height: 40rpx;
    width: 40rpx;
    line-height: 40rpx;
    display: inline-block;
    border-radius: 50%;
    color: white;
    background: #18b357;
}

.goods_count {
    color: black;
}